<!DOCTYPE html>
<html>
<head>
  <title>Christmas List</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "style.css" %>
</head>
<body>
  <div id="snow">
    <nav id="nav-bar">
      <% if current_user %>
      <ul id="nav-list">
        <li class="nav-btn"><%= link_to "Christmas List", user_lists_path(current_user) %></li>
        <li class="nav-btn"><%= link_to "Add Item", new_user_list_path(current_user) %></li>
        <li class="nav-btn"><%= link_to "Edit Account", edit_user_path(current_user) %></li>
        <li class="nav-btn"><%= link_to "Logout", logout_path %></li>
      </ul>
      <% end %>
    </nav>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
<script>
$(function() {
  $( ".list" ).sortable({
    connectWith: ".connectedSortable"
  }).disableSelection();
});
</script>
</html>
